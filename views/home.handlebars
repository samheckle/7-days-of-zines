<div class="home-content">
  <div class="page" id="page1">
      <a id="page1_link" href="/page-1">page 1</a>
  </div>
  <div class="page" id="page2">
      <a id="page2_link" href="/page-2">page 2</a>
  </div>
  <div class="page page3"></div>
  <div class="page page4"></div>
  <div class="page page5"></div>
  <div class="page page6"></div>
  <div class="page page7"></div>
  <div class="page about">
    <a href="/about">about</a>
  </div>

  <script>
    const pages = 2;
    
    for(let i = 1; i <= pages; i++){

      const page1 = document.getElementById(`page${i}`); 
      const link = document.getElementById(`page${i}_link`)
      const img = document.createElement("img");
      if(window.innerWidth < 1025){
          img.src = `assets/page${i}/cover.gif`
          link.style.opacity = "10"
      } else {
          img.src = `assets/page${i}/cover.png`
          link.style.opacity = "0"
      }
      img.style.filter = "grayscale(100%)"
      page1.addEventListener("mouseenter", (e)=>{
          img.src = `assets/page${i}/cover.gif`
          img.style.filter = "grayscale(0%)"
          link.style.opacity = "10"
      })
      page1.addEventListener("mouseleave", (e)=>{
          img.src = `assets/page${i}/cover.png`
          img.style.filter = "grayscale(100%)"
          link.style.opacity = "0"
      })
      
      img.className = "page_image";
      page1.appendChild(img);

    }
  </script>
</div>